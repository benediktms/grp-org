{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "ESNext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@grp-org/components": ["libs/components/src/index.ts"],
      "@grp-org/server-auth": ["libs/server/auth/src/index.ts"],
      "@grp-org/server-core": ["libs/server/core/src/index.ts"],
      "@grp-org/server-data": ["libs/server/data/src/index.ts"],
      "@grp-org/types": ["libs/types/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
