{
  "compileOnSave": false,
  "compilerOptions": {
    "strict": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "ESNext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@hive-mind/client-data-access-auth": [
        "libs/client/data-access-auth/src/index.ts"
      ],
      "@hive-mind/client-data-access-gql": [
        "libs/client/data-access-gql/src/index.ts"
      ],
      "@hive-mind/client-ui-form": ["libs/client/ui-form/src/index.ts"],
      "@hive-mind/client/mocks": ["libs/client/mocks/src/index.ts"],
      "@hive-mind/client/validation": ["libs/client/validation/src/index.ts"],
      "@hive-mind/client/views": ["libs/client/views/src/index.ts"],
      "@hive-mind/server-auth": ["libs/server/auth/src/index.ts"],
      "@hive-mind/server-core": ["libs/server/core/src/index.ts"],
      "@hive-mind/server-prisma": ["libs/server/prisma/src/index.ts"],
      "@hive-mind/server/courier": ["libs/server/courier/src/index.ts"],
      "@hive-mind/shared": ["libs/shared/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
